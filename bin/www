#!/usr/bin/env node
//var debug = require('debug')('CardsAgainstContinuity');
var app = require('../app');

app.set('port', process.env.NODEJS_PORT || 8000);
app.set('ip', process.env.NODEJS_IP || "172.31.24.107");

var server = app.listen(app.get('port'), app.get('ip'), function() {
    console.log("✔ Express server listening at %s:%d ", app.get('ip'), app.get('port'));
});

var io = app.io;
io.attach(server);