#!/usr/bin/env node
//var debug = require('debug')('CardsAgainstContinuity');
var config = require('../config');
var app = require('../app');

app.set('port', process.env.NODEJS_PORT || config.DefaultPort || 8000);
app.set('ip', process.env.NODEJS_IP || config.DefaultIP || "0.0.0.0");

console.log("Attempting to listen on " + app.get('ip') + ":" + app.get('port'));
var server = app.listen(app.get('port'), app.get('ip'), function() {
    console.log("✔ Express server listening at %s:%d ", app.get('ip'), app.get('port'));
});

var io = app.io;
io.attach(server);